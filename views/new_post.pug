extends layout.pug

block content
  .form-container
    h1.mb-3 Create a New Post
    form(action="/post", method="POST", enctype="multipart/form-data")
      .form-group
        label(for="title") Title
        input(type="text", name="title", required)
      
      .form-group
        label(for="content") Content
        textarea(name="content", required)
      
      .form-group
        label(for="image") Image
        input(type="file", name="image", accept="image/*", data-preview="imagePreview")
        img#imagePreview.post-image(style="display: none; max-width: 300px;")
      
      .form-group
        label(for="tag") Tags (comma separated)
        input(type="text", name="tag", placeholder="e.g., tech, design, travel")
      
      button.btn(type="submit") Create Post