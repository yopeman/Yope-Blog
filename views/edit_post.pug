extends layout.pug

block content
  .form-container
    h1.mb-3 Edit Post
    form(action=`/post/edit/${post.id}`, method="POST", enctype="multipart/form-data")
      .form-group
        label(for="title") Title
        input(type="text", name="title", value=post.title, required)
      
      .form-group
        label(for="content") Content
        textarea(name="content", required)= post.content
      
      .form-group
        label Current Image
        if post.imageUrl
          img.post-image(src=post.imageUrl, alt="Post Image")
        else
          p No image uploaded
      
      .form-group
        label(for="image") Update Image
        input(type="file", name="image", accept="image/*", data-preview="imagePreview")
        img#imagePreview.post-image(style="display: none; max-width: 300px;")
      
      .form-group
        label(for="tag") Tags (comma separated)
        input(type="text", name="tag", value=post.tag, placeholder="e.g., tech, design, travel")
      
      .flex.items-center
        button.btn(type="submit") Save Changes
        a.btn.btn-outline.ml-2(href="/post") Cancel